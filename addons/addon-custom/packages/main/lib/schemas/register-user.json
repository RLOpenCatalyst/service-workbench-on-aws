{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^([^.%+!$&*=^|~#%{}]+)[a-zA-Z0-9\\._%+!$&*=^|~#%{}/\\-]+([^.!]+)@([^-.!](([a-zA-Z0-9\\-]+\\.){1,}([a-zA-Z]{2,63})))",
      "format": "email",
      "minLength": 6,
      "maxLength": 512
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "pattern": "^[A-Za-z0-9 .-]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "pattern": "^[A-Za-z0-9 .-]+$"
    },
    "acceptedTerms": {
      "type": "string",
      "pattern": "\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d\\.\\d+([+-][0-2]\\d:[0-5]\\d|Z)"
    }
  },
  "required": ["email", "firstName", "lastName", "acceptedTerms"]
}
