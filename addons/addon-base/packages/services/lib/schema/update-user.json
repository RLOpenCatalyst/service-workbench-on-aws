{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "type": "string"
    },
    "usernameInIdp": {
      "type": "string",
      "minLength": 3,
      "maxLength": 300
    },
    "email": {
      "type": "string",
      "pattern": "^([^.%+!$&*=^|~#%{}]+)[a-zA-Z0-9\\._%+!$&*=^|~#%{}/\\-]+([^.!]+)@([^-.!](([a-zA-Z0-9\\-]+\\.){1,}([a-zA-Z]{2,63})))"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "pattern": "^[A-Za-z0-9 .-]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "pattern": "^[A-Za-z0-9 .-]+$"
    },
    "userType": {
      "type": "string",
      "enum": ["root"]
    },
    "isSamlAuthenticatedUser": {
      "type": "boolean"
    },
    "isNativePoolUser": {
      "type": "boolean",
      "default": false
    },
    "isAdmin": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive"]
    },
    "rev": {
      "type": "number",
      "minimum": 0
    },
    "acceptedTerms": {
      "type": "string",
      "pattern": "^\\d\\d\\d\\d\\-[0-1]\\d\\-[0-3]\\d[Tt\\s](?:[0-2]\\d:[0-5]\\d:[0-5]\\d|23:59:60)(?:\\.\\d+)?(?:[Zz]|[+-]\\d\\d(?::?\\d\\d)?)?$"
    }
  },
  "required": ["uid", "rev"]
}
